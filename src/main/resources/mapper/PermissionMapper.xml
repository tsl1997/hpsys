<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.k2502.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.k2502.pojo.Permission">
        <id column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="menu_id" property="menuId" />
        <result column="acl_value" property="aclValue" />
        <result column="create_date" property="createDate" />
        <result column="update_date" property="updateDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, role_id, menu_id, acl_value, create_date, update_date
    </sql>

    <select id="findAuthorityByUsername" resultType="string">
        SELECT
            p.`acl_value`
        FROM `t_permission` p
                 LEFT JOIN `t_account_role` ar
                           ON p.`role_id` = ar.`role_id`
                 LEFT JOIN `t_account` a
                           ON ar.`account_id` = a.`id`
        WHERE a.`status` = 1
          AND a.`user_name` = #{userName}
    </select>

</mapper>
